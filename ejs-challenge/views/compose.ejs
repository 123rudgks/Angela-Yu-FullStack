<%- include("partials/header.ejs") -%>
<form action="/compose" method="post">
    <h1>Compose</h1>
    <label class="form-label" for="postTitle">Title</label>
    <div class="mb-3">
        <input class="form-control" type="text" name="postTitle" cols="180">
    </div>
    <label class="form-label" for="postBody">Post</label>
    <div class="mb-3">
        <textarea class="form-control" name="postBody" cols="50" rows="10"></textarea>
    </div>
    <input class="btn btn-primary" type="submit" value="Submit">

</form>
